<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <EditText
        android:id="@+id/name"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textColor="@android:color/black"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="phone"
        android:textColor="@android:color/black"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/email"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/black"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/password"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@android:color/black"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/street"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Street Address (optional)"
        android:inputType="text"
        android:visibility="invisible" />

    <Spinner
        android:id="@+id/transportation"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/street"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <Spinner
        android:id="@+id/car_type"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/transportation"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/num_seats"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/car_type"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Number of seats"
        android:inputType="number"
        android:visibility="invisible" />

    <CheckBox
        android:id="@+id/driving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/num_seats"
        android:layout_alignStart="@+id/name"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text="I am willing to drive people to events"
        android:textSize="14sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/login"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/name"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="46dp"
        android:text="Login" />

    <Button
        android:id="@+id/register"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/login"
        android:layout_alignEnd="@+id/name"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="1dp"
        android:text="Register" />

    <EditText
        android:id="@+id/email_login"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/password_login"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_login"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_login"
        android:layout_centerHorizontal="true"
        android:text="SUBMIT" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/driving"
        android:layout_centerHorizontal="true"
        android:text="SUBMIT"
        android:visibility="invisible" />


</RelativeLayout>