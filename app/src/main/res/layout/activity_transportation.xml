<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:text="Do you have a car?"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <RadioButton
        android:id="@+id/yescar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/nocar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="128dp"
        android:layout_marginTop="0dp"
        android:text="Yes"
        android:textColor="@android:color/black" />

    <RadioButton
        android:id="@+id/nocar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="129dp"
        android:text="No"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/need"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="190dp"
        android:text="How many seats do you need?"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/numneed"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/need"
        android:layout_marginTop="-9dp"
        android:layout_toEndOf="@+id/fit"
        android:ems="10"
        android:inputType="number"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/fit"
        android:layout_width="320dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="189dp"
        android:text="How many people can you fit?"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/numfit"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="181dp"
        android:layout_toEndOf="@+id/fit"
        android:ems="10"
        android:inputType="number"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/pickuptime"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="233dp"
        android:text="Pickup time"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/availabletime"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="233dp"
        android:text="Available time"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:visibility="visible" />

    <EditText
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/pickuptime"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-6dp"
        android:layout_marginEnd="26dp"
        android:ems="10"
        android:inputType="text"
        android:textColor="@android:color/black"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/start_time"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/pickuptime"
        android:layout_marginStart="1dp"
        android:layout_marginTop="-6dp"
        android:layout_toEndOf="@+id/pickuptime"
        android:ems="10"
        android:hint="Start"
        android:inputType="text"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/end_time"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/pickuptime"
        android:layout_marginStart="129dp"
        android:layout_marginTop="-6dp"
        android:layout_toEndOf="@+id/pickuptime"
        android:ems="10"
        android:hint="End"
        android:inputType="text"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/pickupaddress"
        android:layout_width="175dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="277dp"
        android:text="Pickup Address"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/departaddress"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="278dp"
        android:text="Depart Address"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:visibility="visible" />

    <EditText
        android:id="@+id/address"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/currentlocation"
        android:layout_alignTop="@+id/pickupaddress"
        android:layout_marginStart="0dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="1dp"
        android:ems="10"
        android:inputType="textPostalAddress" />

    <CheckBox
        android:id="@+id/currentlocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:layout_alignStart="@+id/start_time"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="-84dp"
        android:text="Current Location" />

    <TextView
        android:id="@+id/OR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pickuptime"
        android:layout_marginStart="12dp"
        android:layout_marginTop="11dp"
        android:layout_toEndOf="@+id/need"
        android:text="OR"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/TO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pickuptime"
        android:layout_marginStart="-49dp"
        android:layout_marginTop="-31dp"
        android:layout_toEndOf="@+id/need"
        android:text="to"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/transport_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="411dp"
        android:text="SUBMIT" />



</RelativeLayout>